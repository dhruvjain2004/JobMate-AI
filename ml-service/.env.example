# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Node.js Backend
NODE_BACKEND_URL=http://localhost:5000
SHARED_SECRET=xxxx

# MongoDB (optional - if direct access needed)
MONGODB_URI=mongodb://localhost:27017/jobmate

# Model Configuration
SPACY_MODEL=en_core_web_md
MODEL_VERSION=v1.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ml-service.log

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5000

# Cache
CACHE_TTL=3600
ENABLE_CACHE=true

# ML Configuration
MIN_MATCH_THRESHOLD=0.5
MAX_CAREER_PREDICTIONS=5
SHAP_SAMPLE_SIZE=100
